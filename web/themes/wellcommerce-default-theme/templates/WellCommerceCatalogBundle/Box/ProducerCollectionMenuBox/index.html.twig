<div class="box">
    <div class="list-group main-categories">
        {% for producerCollection in producerCollections.rows %}
            <a href="{{ producerCollection.route }}" class="list-group-item {% if producerCollection.id == activeProducerCollection.id %}active{% endif %}">{{ producerCollection.name }}
                <small>({{ producerCollection.products }})</small>
                <span class="triangle"></span>
            </a>
        {% endfor %}
    </div>
</div>
